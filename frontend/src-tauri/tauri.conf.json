{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cession Management App",
  "version": "1.0.0",
  "identifier": "com.nassimmaaoui.cessionapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cession Management App",
        "fullscreen": false,
        "maximized": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://localhost:8082 http://localhost:8083 http://localhost:8084 http://localhost:8085;"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Nassim Maaoui ©",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "backend/cession-app-backend-0.0.1-SNAPSHOT.jar",
      "backend/app.jar"
    ],
    "copyright": "Copyright © 2025 Nassim Maaoui. All rights reserved.",
    "category": "Business",
    "shortDescription": "Professional cession management application",
    "longDescription": "A comprehensive desktop application for managing financial cessions with integrated backend services, real-time monitoring, and advanced error recovery.",
    "windows": {
      "wix": {
        "language": [
          "en-US"
        ]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "deb": {
        "depends": [
          "default-jre | openjdk-17-jre | openjdk-11-jre"
        ],
        "priority": "optional",
        "section": "utils"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {}
}